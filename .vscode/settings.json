{
    "files.exclude": {
        "**/*.o": true,
        "**/*.bat": true,
		"[Cc][Dd]/[Bb]uild[Dd]rop**" : true,
    },
    "files.watcherExclude": {
        "**/*.o": true,
        "**/*.bat": true,
		"[Cc][Dd]/[Bb]uild[Dd]rop**" : true,
    },
	"C_Cpp.loggingLevel": "Debug",
	"files.associations": {
        "*.H": "c",
        "*.C": "c",
        "*.h": "c",
        "*.c": "c",
        "*.HPP": "cpp",
        "*.CXX": "cpp",
        "*.hpp": "cpp",
        "*.cxx": "cpp",
        "*.def": "c",
        "compare": "cpp",
        "stdexcept": "cpp",
        "cassert": "cpp"
    },
    "cmake.configureOnOpen": false,
    "makefile.makefilePath": "./makefile"
}
